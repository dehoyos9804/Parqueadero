<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@drawable/image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="bottom|center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/darker_gray"
            android:text="Ingresa tus datos para iniciar sesion"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:layout_marginBottom="40dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="usuario"
            android:textAppearance="?android:textAppearanceLarge"
            android:fontFamily="sans-serif-condensed-light"
            android:drawableLeft="@drawable/ic_person_light"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="contraseña"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:fontFamily="sans-serif-condensed-light"
            android:drawableLeft="@drawable/ic_look_light"/>

        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_round_button"
            android:textColor="@android:color/background_light"
            android:text="CONTINUAR"
            android:textAppearance="?android:textAppearanceLarge"
            android:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="¿olvido su contraseña?"
            android:textColor="@android:color/darker_gray"
            android:textAppearance="?android:textAppearanceLarge"
            android:fontFamily="sans-serif-condensed-light"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.5"
            android:text="@string/text_crear_cuenta"
            android:textColor="@android:color/darker_gray"
            android:textAppearance="?android:textAppearanceLarge"
            android:drawableLeft="@drawable/ic_person_light"
            android:fontFamily="sans-serif-condensed-light"
            android:layout_marginBottom="50dp" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>